<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="MyGameServer"
                   namespace="MyGameServer.Model">

  <class name="Player" table="player">
    <id name="Id" column="id" type="Int32">
      <generator class="native"></generator>
    </id>
    <property name="Username" column="username" type="String"></property>
    <property name="Account" column="account" type="String"></property>
    <property name="Pwd" column="pwd" type="String"></property>
    <property name="Level" column="level" type="Int32"></property>
    <property name="Score" column="score" type="Int32"></property>
  </class>

</hibernate-mapping>
